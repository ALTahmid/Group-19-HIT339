@model IEnumerable<tennis.Models.Schedule>

@{
    ViewData["Title"] = "My Schedules";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f7f9fc;
        margin: 20px;
    }

    h2 {
        color: #333;
        margin-bottom: 20px;
        text-align: center;
    }

    .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 20px;
    }

    .card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        margin: 15px;
        padding: 20px;
        width: 300px;
        transition: transform 0.2s;
    }

    .card:hover {
        transform: scale(1.02);
    }

    .card-header {
        font-weight: bold;
        border-bottom: 2px solid #4CAF50;
        margin-bottom: 15px;
        color: #4CAF50;
        font-size: 1.2em;
        text-align: center;
    }

    .card-body {
        margin-bottom: 15px;
    }

    .btn-primary {
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 15px;
        cursor: pointer;
        transition: background-color 0.3s;
        text-decoration: none;
        display: block;
        text-align: center;
    }

    .btn-primary:hover {
        background-color: #45a049;
    }
</style>

<h2>My Schedules</h2>

<div class="container">
    @if (!Model.Any())
    {
        <div class="alert alert-info" style="text-align:center; width: 100%;">
            No schedules available.
        </div>
    }
    else
    {
        @foreach (var schedule in Model)
        {
            <div class="card">
                <div class="card-header">
                    @schedule.Name
                </div>
                <div class="card-body">
                    <p><strong>Location:</strong> @schedule.Location</p>
                    <p><strong>Date:</strong> @schedule.Date.ToShortDateString()</p>
                    <p><strong>Description:</strong> @schedule.Description</p>
                </div>
                <div class="text-center">
                    <a asp-action="EnrolledMembers" asp-route-id="@schedule.ScheduleId" class="btn btn-primary">View Enrolled Members</a>
                </div>
            </div>
        }
    }
</div>
