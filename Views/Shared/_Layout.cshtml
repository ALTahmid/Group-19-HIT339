<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tennis</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tennis.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
            margin: 0;
        }

        header {
            background-color: #4CAF50;
            color: white;
            position: relative;
            z-index: 1000;
            border-radius: 10px;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            padding: 0.75rem 1rem;
            color: #FFF;
        }

        .navbar-toggler {
            border: 1px solid #FFF;
        }

        .navbar-toggler-icon {
            background-color: transparent; /* White icon for better visibility */
        }

        .navbar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 123, 255, 0.9);
            color: white;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
            z-index: 900;
            padding-top: 60px; /* Space for navbar */
        }

            .navbar-overlay.show {
                opacity: 1;
                visibility: visible;
            }

        .navbar-nav {
            display: flex;
            flex-direction: column;
            align-items: stretch;
        }

        .nav-link {
            padding: 1rem 0;
            font-size: 1.25rem;
            width: 100%;
            text-align: center;
            transition: background-color 0.3s;
            color: rgba(255, 255, 255, 0.8);
        }

            .nav-link:hover {
                background-color: rgba(255, 255, 255, 0.2);
                color: #FFF;
            }

        .close-menu {
            position: absolute;
            top: 20px;
            right: 30px;
            font-size: 2rem;
            cursor: pointer;
        }

        .container {
            margin-top: 20px;
            padding-bottom: 80px; /* Prevent content from being hidden behind fixed footer */
        }

        footer {
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 1rem 0;
            position: fixed;
            width: 100%;
            bottom: 0;
        }

            footer a {
                color: #f8f9fa;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Anyone For Tennis &trade;</a>
                <button class="navbar-toggler" type="button" onclick="toggleMenu()">
                    <?xml version="1.0" encoding="utf-8"?><!-- Uploaded to: SVG Repo, www.svgrepo.com, Generator: SVG Repo Mixer Tools -->
<svg width="40px" height="40px" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" fill="none">
  <path fill="#FFF" fill-rule="evenodd" d="M19 4a1 1 0 01-1 1H2a1 1 0 010-2h16a1 1 0 011 1zm0 6a1 1 0 01-1 1H2a1 1 0 110-2h16a1 1 0 011 1zm-1 7a1 1 0 100-2H2a1 1 0 100 2h16z"/>
</svg>
                </button>
            </div>
        </nav>
        <div class="navbar-overlay" id="navbarOverlay">
            <span class="close-menu" onclick="toggleMenu()">&times;</span>
            <div class="navbar-nav">
                @if (User.IsInRole("Member"))

                {
                    <a class="nav-link" asp-area="" asp-controller="Member" asp-action="MySchedules">My Schedules</a>
                    <a class="nav-link" asp-area="" asp-controller="Member" asp-action="Coaches">Coaches</a>
                    <a class="nav-link" asp-area="" asp-controller="Member" asp-action="Enroll">Enroll in Schedule</a>
                }
                @if (User.IsInRole("Coach"))

                {
                    <a class="nav-link" asp-area="" asp-controller="Coach" asp-action="MySchedules">My Schedules</a>
                }
                @if (User.IsInRole("Admin"))

                {
                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">All Schedules</a>
                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="CreateSchedule">Create Schedule</a>
                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="AssignCoach">Assign Coach</a>
                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="ViewMembers">Members List</a>
                }
                <partial name="_LoginPartial" />
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            &copy; 2024 - Anyone For Tennis &trade;
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function toggleMenu() {
            const overlay = document.getElementById('navbarOverlay');
            overlay.classList.toggle('show');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
