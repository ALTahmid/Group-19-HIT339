@model tennis.Models.Schedule

@{
    ViewData["Title"] = "Edit Schedule";
}

<style>
    body {
        font-family: 'Verdana', sans-serif;
        background-color: #f4f7fa;
        margin: 20px;
        color: #333;
    }

    h1 {
        color: #2C3E50;
        text-align: center;
        margin-bottom: 30px;
        font-size: 2.5em;
    }

    h4 {
        color: #34495E;
        margin-top: 20px;
        font-size: 1.6em;
    }

    hr {
        border-top: 1px solid #ccc;
    }

    .card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin: 0 auto; /* Center the card */
        max-width: 500px; /* Set a max width */
    }

    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        border: 2px solid #3498DB;
        border-radius: 5px;
        padding: 10px;
        transition: border-color 0.3s;
        width: 100%;
    }

    .form-control:focus {
        border-color: #2980B9;
        outline: none;
        box-shadow: 0 0 5px rgba(41, 128, 185, 0.5);
    }

    .text-danger {
        color: #d9534f;
    }

    .btn-primary {
        background-color: #27AE60;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 15px;
        cursor: pointer;
        font-size: 1em;
        transition: background-color 0.3s, transform 0.2s;
        width: 100%;
    }

    .btn-primary:hover {
        background-color: #219653;
        transform: translateY(-2px);
    }

    .back-link {
        margin-top: 20px;
        text-decoration: none;
        color: #2980B9;
        font-weight: bold;
        display: block;
        text-align: center;
        font-size: 1.1em;
    }

    .back-link:hover {
        text-decoration: underline;
    }
</style>

<h1>Edit Schedule</h1>

<div class="card">
    <h4>Schedule</h4>
    <hr />
    <form asp-action="Edit">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Location" class="control-label"></label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date" class="control-label"></label>
            <input asp-for="Date" class="form-control" type="date" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CoachId" class="control-label"></label>
            <select asp-for="CoachId" class="form-control" asp-items="ViewBag.Coaches"></select>
            <span asp-validation-for="CoachId" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="ScheduleId" />
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a class="back-link" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
