@model IEnumerable<tennis.Models.Schedule>

@{
    ViewData["Title"] = "Schedules";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f7f9fc;
        margin: 20px;
        color: #333;
    }

    h1 {
        color: #2C3E50;
        text-align: center;
        margin-bottom: 30px;
        font-size: 2.5em;
    }

    .card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 20px;
        transition: transform 0.2s;
    }

    .card:hover {
        transform: scale(1.02);
    }

    .card-header {
        font-weight: bold;
        border-bottom: 2px solid #4CAF50;
        padding-bottom: 10px;
        color: #4CAF50;
    }

    .card-body {
        margin-top: 15px;
    }

    .action-links {
        text-align: center;
        margin-top: 20px;
    }

    .action-links a {
        text-decoration: none;
        color: #3498DB;
        font-weight: bold;
        margin: 0 15px;
    }

    .action-links a:hover {
        text-decoration: underline;
    }

    .btn-link {
        color: #4CAF50;
    }

    .btn-link:hover {
        text-decoration: underline;
    }

    .modal-header {
        background-color: #d9534f;
        color: white;
    }

    .btn-danger {
        background-color: #d9534f;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c9302c;
    }
</style>

<h1>Schedules</h1>

<div class="container">
    @if (!Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <p>No schedules available.</p>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            @item.Name
                        </div>
                        <div class="card-body">
                            <p><strong>Location:</strong> @item.Location</p>
                            <p><strong>Date:</strong> @item.Date.ToString("MM/dd/yyyy")</p>
                            <p><strong>Coach:</strong> @item.Coach?.FirstName @item.Coach?.LastName</p>
                            <div class="action-links">
                                <a class="btn btn-link" asp-action="Edit" asp-route-id="@item.ScheduleId">Edit</a>
                                <a class="btn btn-link" asp-action="Details" asp-route-id="@item.ScheduleId">Details</a>
                                <a class="btn btn-link" href="javascript:void(0);" onclick="showDeleteModal('@item.ScheduleId')">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="action-links">
        <a class="btn btn-primary" asp-action="CreateSchedule">Create New Schedule</a>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Schedule</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this schedule?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <form id="deleteForm" method="post">
                    <input type="hidden" name="id" id="scheduleId" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showDeleteModal(scheduleId) {
            var url = '@Url.Action("DeleteConfirmed", "Admin")';
            document.getElementById('deleteForm').action = url;
            document.getElementById('scheduleId').value = scheduleId;
            $('#deleteModal').modal('show');
        }
    </script>
}
