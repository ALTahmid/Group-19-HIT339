@model IEnumerable<tennis.Models.Member>

@{
    ViewData["Title"] = "View Members";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f7f9fc;
        margin: 20px;
    }

    h1 {
        color: #2C3E50;
        text-align: center;
        margin-bottom: 30px;
        font-size: 2.5em;
    }

    .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        margin: 15px;
        padding: 20px;
        width: 300px;
        transition: transform 0.2s;
    }

    .card:hover {
        transform: scale(1.02);
    }

    .card-header {
        font-weight: bold;
        border-bottom: 2px solid #4CAF50;
        margin-bottom: 15px;
        color: #4CAF50;
        font-size: 1.2em;
    }

    .btn-primary {
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 15px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #45a049;
    }

    .alert {
        margin-top: 20px;
        padding: 15px;
        border-radius: 5px;
    }
</style>

<h1>View Members</h1>

<div class="container">
    @if (!Model.Any())
    {
        <div class="alert alert-info">No members found.</div>
    }
    else
    {
        @foreach (var member in Model)
        {
            <div class="card">
                <div class="card-header">
                    @member.FirstName @member.LastName
                </div>
                <div class="card-body">
                    <p><strong>Email:</strong> @member.Email</p>
                    <p><strong>Active:</strong> @(member.Active ? "Yes" : "No")</p>
                    <h5>Enrolled Schedules:</h5>
                    @if (member.MemberSchedules.Any())
                    {
                        @foreach (var memberSchedule in member.MemberSchedules)
                        {
                            <div>
                                @memberSchedule.Schedule.Name (@memberSchedule.Schedule.Date.ToString("MM/dd/yyyy"))
                            </div>
                        }
                    }
                    else
                    {
                        <div>No enrolled schedules.</div>
                    }
                </div>
            </div>
        }
    }

    @if (TempData["NotificationResult"] != null)
    {
        <div class="alert alert-info">
            @TempData["NotificationResult"]
        </div>
    }
</div>
