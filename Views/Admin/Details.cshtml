@model tennis.Models.Schedule

@{
    ViewData["Title"] = "Schedule Details";
}

<style>
    body {
        font-family: 'Verdana', sans-serif;
        background-color: #f4f7fa;
        margin: 20px;
        color: #333;
    }

    h1 {
        color: #2C3E50;
        text-align: center;
        margin-bottom: 30px;
        font-size: 2.5em;
    }

    h4 {
        color: #34495E;
        margin-top: 20px;
        font-size: 1.6em;
    }

    hr {
        border-top: 1px solid #ccc;
    }

    .card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 20px;
    }

    dl.row {
        margin: 0;
        padding: 15px;
    }

    dt {
        font-weight: bold;
        color: #333;
    }

    dd {
        margin-left: 0;
        margin-bottom: 10px;
        color: #555;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

    .table th, .table td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .table th {
        background-color: #2980B9;
        color: white;
    }

    .table tr:hover {
        background-color: #f1f1f1;
    }

    .action-links {
        margin-top: 20px;
        text-align: center;
    }

    .action-links a {
        text-decoration: none;
        color: #2980B9;
        font-weight: bold;
        margin-right: 10px;
    }

    .action-links a:hover {
        text-decoration: underline;
    }
</style>

<h1>Schedule Details</h1>

<div class="card">
    <h4>Schedule</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToString("MM/dd/yyyy")</dd>
        <dt class="col-sm-2">Coach</dt>
        <dd class="col-sm-10">@Model.Coach?.FirstName @Model.Coach?.LastName</dd>
    </dl>
</div>

<div class="card">
    <h4>Enrolled Members</h4>
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var memberSchedule in Model.MemberSchedules)
            {
                <tr>
                    <td>@memberSchedule.Member?.FirstName</td>
                    <td>@memberSchedule.Member?.LastName</td>
                    <td>@memberSchedule.Member?.Email</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="action-links">
    <a asp-action="Edit" asp-route-id="@Model.ScheduleId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
